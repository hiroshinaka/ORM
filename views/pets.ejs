<!-- pets.ejs -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8"/>
  <link rel="stylesheet" href="bulma.min.css">
  <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
</head>
<body>
<section class="section">
  <div class="columns is-desktop is-vcentered">
    <div class="column is-10 is-offset-1 notification is-info is-light box container">
      <div class="title">
        Pets
      </div>
      <% if (allPets && allPets.length > 0) { %>
        <div class="table-container">
          <table class="table is-bordered is-hoverable is-striped is-narrow">
            <thead>
              <tr>
                <th>Pet ID</th>
                <th>Pet Name</th>
              </tr>
            </thead>
            <tbody>
              <% for (let i = 0; i < allPets.length; i++) { %>
                <tr>
                  <!-- Match your "pet" columns exactly: -->
                  <td><%= allPets[i].pet_id %></td>
                  <td><%= allPets[i].name %></td>
                </tr>
              <% } %>
            </tbody>
            <tfoot>
              <tr>
                <td colspan="2">
                  There are <%= allPets.length %> pets.
                </td>
              </tr>
            </tfoot>
          </table>
        </div>
      <% } else { %>
        <p>No pets found.</p>
      <% } %>

      <!-- Example "Add Pet" form if you have one -->
      <form action="/addPet" method="post">
        <div class="field is-horizontal">
          <div class="field-label is-normal">
            <label class="label">Add New Pet</label>
          </div>
          <div class="field-body">
            <div class="field">
              <p class="control is-expanded">
                <input name="name" class="input" type="text" placeholder="Pet Name">
              </p>
            </div>
            <div class="field">
              <button class="button is-link">
                <span>Add</span>
                <span class="icon is-small">
                  <i class="fas fa-plus"></i>
                </span>
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>
</body>
</html>
